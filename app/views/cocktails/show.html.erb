<%= link_to 'home', root_path, class: 'btn btn-flat m-3' %>

<div class="container" style="padding: 20px 0;">
  <h1 style="text-align: center"><%= @cocktail.name %></h1>
  <% if @cocktail.image.attached? %>
    <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.image.key %>); background-size: cover; background-position: center; width: 50%; height: 400px; margin: auto;"></div>
  <% else%>
    <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path 'https://image.freepik.com/free-photo/two-empty-cocktail-glasses-will-fall-overturned-out-them-leaked-liquid-ice-pieces-fruit_95411-102.jpg' %>); background-size: cover; background-position: center; width: 50%; height: 400px; margin: auto;"></div>
  <% end %>


  <h1 style="text-align: center" class="mt-3">Combinations</h1>

  <% @cocktail.doses.each do |dose| %>
    <div class="border border-dark rounded mb-3">
      <p>Description: <%= dose.description %></p>
      <p>Added ingredient: <%= dose.ingredient.name %></p>
      <p><%= link_to "Remove", dose_path(dose),method: :delete,data: { confirm: "Are you sure?" } %></p>
    </div>
  <% end %>

  <%= link_to 'New combination', new_cocktail_dose_path(@cocktail), class: 'btn btn-flat' %>
</div>
