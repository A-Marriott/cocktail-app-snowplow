


<div class="banner">
  <h1>Cocktailz-R-Us</h1>
  <p>Get trollied but for more money</p>
  <%= link_to 'New cocktail', new_cocktail_path, class: 'btn btn-flat'%>
</div>
</div>

<div class="container" style="padding: 20px 0;">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <%= cocktail.name %>
        <% if cocktail.image.attached? && false %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.image.key, height: 300, width: 400, crop: :fill %>)"><%= cocktail.name %></div>
        <% elsif false %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path 'https://image.freepik.com/free-photo/two-empty-cocktail-glasses-will-fall-overturned-out-them-leaked-liquid-ice-pieces-fruit_95411-102.jpg', height: 300, width: 400, crop: :fill %>)"><%= cocktail.name %></div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
