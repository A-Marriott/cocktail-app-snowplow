<%= link_to 'home', root_path %>

<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %>-<%= dose.description %> <%= link_to "Remove",
                                                              dose_path(dose),
                                                              method: :delete,
                                                              data: { confirm: "Are you sure?" } %>
</p>
<% end %>

<%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %>
