<div class="btn-misclick-zone btn-home-misclick-zone">
  <%= link_to 'home', root_path, class: 'btn btn-flat m-3' %>
</div>

<div class="container" style="padding: 20px 0;">
  <%= simple_form_for @cocktail, html: { class: :cocktail_upload } do |f| %>
    <%= f.input :name %>
    <div class="d-flex justify-content-center">
      <div class="btn-misclick-zone">
        <%= f.submit "Submit cocktail", class: "btn btn-flat" %>
      </div>
    </div>
  <% end %>
</div>
